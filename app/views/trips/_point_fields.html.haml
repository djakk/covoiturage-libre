.nested-fields.form-inputs.row.step-row
  .col-xs-1
    %em.handle
      .glyphicon.glyphicon-sort{aria: {hidden: 'true'}}
  .col-xs-1.step-nb
    = f.object.rank
  .col-md-8
    %p
      %em prix et places : entre la ville ci-dessus et la ville ci-dessous
    - date_value = f.object.departure_date.present? ? localize(f.object.departure_date, format: :trip_date) : ''
    = f.input :price, wrapper: :horizontal_form, input_html: { min: '0', step: '1' }, required: true
    = f.input :seats, wrapper: :horizontal_form, input_html: { min: '0' }, collection: 0..8, required: true
    = f.input :city, as: :string, wrapper: :horizontal_form, input_html: { class: 'geoname' }, placeholder: 'Ville Ã©tape', required: true
    = f.input :departure_time, as: :time, html5: false, wrapper: :horizontal_form, minute_step: 5 , required: true, input_html: { style: 'display: initial; width: initial;' }, prompt: { hour: '', minute: '' }
    = f.input :departure_date_in_string, as: :string, wrapper: :horizontal_form, input_html: { value: date_value, class: 'datepicker' }, placeholder: 'Date', required: true
  = f.input :lon, as: :hidden
  = f.input :lat, as: :hidden
  = f.input :kind, as: :hidden, input_html: { value: f.object.kind || 'Step' }
  = f.input :rank, as: :hidden

  .col-xs-2
    = link_to_remove_association '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'.html_safe, f, class: 'step-delete'

